@model IEnumerable<LocallySourced.Models.ForumViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="table">
    <div>
        <div class="col-lg-12">Welcome To Locally Sourced!</div>
    </div>

    @foreach (var item in Model)
    {
       
    <div class="col-lg-12">   
        <div class="col-md-12">
            @Html.DisplayFor(modelItem => item.NickName)
        </div>
   </div>
        
    <div class="col-lg-12">
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.Subject)
        </div>

        <div class="col-md-11">
            @Html.DisplayFor(modelItem => item.Subject)
        </div>
    </div>
        
    <div class="container panel-group">
        <div class="col-lg-12">
            <div class="col-xs-1 panel-title">
                @Html.DisplayNameFor(model => model.Body)
            </div>

            <div class="col-md-11 l panel-body">
                @Html.DisplayFor(modelItem => item.Body)
            </div>
        </div>
        <div class="col-xs-12">
            <div class="col-xs-1 panel-footer">
                @Html.DisplayNameFor(model => model.Date)
            </div>

            <div class="col-sm-11 panel-footer">
                @Html.DisplayFor(modelItem => item.Date)
            </div>

        </div>
    </div>
        
   
        
    <div class="col-lg-12">
        <div class="col-md-6"></div>
        <div class="col-md-6">
            @Html.ActionLink("Edit", "Edit", new { id = item.MessageID }) |
            @Html.ActionLink("Details", "Details", new { id = item.MessageID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MessageID })
        </div>
    </div>
        }
</div>      
    
